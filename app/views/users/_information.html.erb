<div class = "col-md-3">
  <div class = "box box-primary">
  <div class = "box-body box-profile row">
      <%= link_to gravatar_for(@user), @user %>
      <h3 class = "profile-username text-center"><%= @user.name%></h3>
      <p class = "text-muted text-center"><%= get_total_learn @user.id %> / <%= get_total_words %></p>
      <div class="col-md-12">
        <ul class = "list-group list-group-unbordered">
          <li class = "list-group-item">
            <b><%= t("followers") %></b>
            <%= content_tag :p, class: "pull-right", id: "followers_#{@user.id}" do -%>
            <%= @user.followers.length %>
            <% end -%>
          </li>
          <li class = "list-group-item">
            <b><%= t("following") %></b>
            <%= content_tag :p, class: "pull-right", id: "following_#{@user.id}" do -%>
            <%= @user.following.length %>
            <% end -%>
          </li>
        </ul>
      </div>
      <div class= "col-md-12">
        <%= render 'follow_form' if logged_in?%>
      </div>
    </div>
  </div>
</div>
