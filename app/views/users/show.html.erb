<% provide :title, t("detail_user") %>
<section class = "content" id = "show_user">
  <div class = "row">
    <div class = "col-md-3">
      <div class = "box box-primary">
        <div class = "box-body box-profile">
          <%= link_to gravatar_for(current_user), current_user %>
          <h3 class = "profile-username text-center"><%= @user.name%></h3>
          <p class = "text-muted text-center">Software Engineer</p>
          <ul class = "list-group list-group-unbordered">
            <li class = "list-group-item">
              <b><%= t("followers") %></b>
              <p class = "pull-right" id = "followers"><%= @user.followers.length %></p>
            </li>
            <li class = "list-group-item">
              <b><%= t("following") %></b>
              <p class = "pull-right" id = "following"><%= @user.following.length %></p>
            </li>
          </ul>
          <%= render 'follow_form' if logged_in? %>
        </div>
      </div>
    </div>
    <div class = "col-md-9">
      <div class = "nav-tabs-custom">
        <ul class = "nav nav-tabs">
          <li class = "active">
            <a href = "#timeline" data-toggle = "tab">
              <%= t "time_line" %>
            </a>
          </li>
        </ul>
        <div class = "tab-content">
          <div class = "active tab-pane" id = "timeline">
            <% if @activities.any? %>
              <ol class = "timeline timeline-inverse">
                <li class = "time-label">
                <span class = "bg-red">
                  <%= Date.today %>
                </span>
              </li>
              </ol>
              <ol class = "timeline timeline-inverse" id = "activities">
                  <%= render @activities %>
              </ol>
              <div id = "pag">
                <%= will_paginate @activities %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

