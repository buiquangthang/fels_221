<% @user ||= current_user %>
<div class="stats">
  <%= link_to following_user_path(@user) do %>
  <strong id="following" class="stat">
    <%= @user.following.length %>
  </strong>
  <%= t "following" %>
  <% end %>
  <%= link_to followers_user_path(@user) do %>
  <strong id="following" class="stat">
    <%= @user.followers.length %>
  </strong>
  <%= t "followers" %>
  <%  end %>
</div>
